model User {
   id        String   @id @default(cuid())
   email     String   @unique
   phone     String   @unique
   instagram  String?  
   score     Int      @default(0)
   name      String?
   plan      Plan
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt @default(now())

   chats Chat[] @relation("chat_user")
   chatsAsUser2 Chat[] @relation("chat_user2")
    messages Message[]
    wishlists Wishlist? @relation("user_wishlist")
    notifications Notification[]
    offers Offer[]
    salesAsBuyer Sale[] @relation("buyer_sales")
 }

 enum Plan {
   FREE
   PREMIUM
   ENTERPRISE
 }