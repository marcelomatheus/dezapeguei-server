model User {
  id             String   @id
  email          String   @unique
  phone          String?
  instagram      String?
  name           String?
  cpf            String?  @unique
  avatar         String?
  bio            String?
  rating         Float    @default(0)
  salesCount     Int      @default(0)
  purchasesCount Int      @default(0)
  city           String?
  state          String?
  plan           Plan     @default(FREE)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt

  participatedChats Participant[]
  messages          Message[]

  wishlists     Wishlist[]
  notifications Notification[]
  offers        Offer[]
  salesAsBuyer  Sale[]         @relation("buyer_sales")
}

enum Plan {
  FREE
  PREMIUM
  ENTERPRISE
}
