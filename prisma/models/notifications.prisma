model Notification {
  id         String     @id @default(cuid())
  userId     String
  message    String
  isRead     Boolean    @default(false)
  redirect   String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId, isRead])
  @@index([isRead])
}